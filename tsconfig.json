{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}